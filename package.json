{
  "name": "@cramkle/hipocampo",
  "version": "0.9.1",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "repository": "https://github.com/cramkle/hipocampo.git",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext ts,js .",
    "lint:ts": "tsc --noEmit --pretty",
    "start": "node --icu-data-dir=node_modules/full-icu dist/index.js",
    "dev": "tsc-watch --onSuccess \"yarn start\"",
    "test": "jest",
    "release": "release-it",
    "download-schema": "apollo service:download --endpoint=http://localhost:5000/graphql -k",
    "gen-types": "apollo client:codegen __generated__ --target=typescript --localSchemaFile=schema.json --globalTypesFile=src/globalTypes.ts"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "connect-redis": "^5.0.0",
    "cookie-parser": "^1.4.4",
    "dataloader": "^2.0.0",
    "date-fns": "^2.16.0",
    "date-fns-tz": "^1.0.10",
    "dotenv": "^8.2.0",
    "draft-js": "^0.11.7",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "express-session": "^1.17.0",
    "full-icu": "^1.3.1",
    "graphql": "^15.3.0",
    "graphql-relay": "^0.6.0",
    "graphql-type-json": "^0.3.2",
    "helmet": "^4.1.0",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "redis": "^3.0.2",
    "shortid": "^2.2.13",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@lucasecdb/eslint-config": "^0.11.0",
    "@shelf/jest-mongodb": "^1.2.2",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/connect-redis": "^0.0.14",
    "@types/cookie-parser": "^1.4.1",
    "@types/draft-js": "^0.10.43",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/graphql-relay": "^0.6.0",
    "@types/graphql-type-json": "^0.3.0",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^26.0.10",
    "@types/lodash": "^4.14.160",
    "@types/mongodb": "^3.5.26",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.6.1",
    "@types/passport": "^1.0.4",
    "@types/passport-local": "^1.0.33",
    "@types/shortid": "^0.0.29",
    "@types/uuid": "^8.3.0",
    "apollo": "^2.30.3",
    "babel-jest": "^26.3.0",
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "release-it": "^13.7.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^3.9.7"
  },
  "resolutions": {
    "graphql": "^15.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ],
    "*.{scss,css}": [
      "stylelint"
    ]
  }
}
